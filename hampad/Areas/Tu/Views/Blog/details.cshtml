@model DataLayer.AdminEntities.Blog.Tb_Blog
<section id="timeline-card">

    <div class="row ">


        <div class="col-lg-6 col-sm-12">
            <div class="card">

                <div class="card-content">
                    <div class="card-body">
                        <ul class="activity-timeline timeline-left list-unstyled">

                            <li>

                                <div class="timeline-icon bg-warning">
                                    <i class="feather icon-check font-medium-2"></i>
                                </div>
                                <div class="timeline-info">
                                    <p class="font-weight-bold" style="text-align: right;">
                                        Konu :</p>
                                    <br>


                                    <div class="col-lg-12 d-lg-block  text-center align-self-center px-1 py-0">


                                        <div class="footer-btn alert alert-primary  "
                                            style="line-height: 40px;font-size: 14px;text-align: justify;">

                                            @Model.TitleBLo

                                        </div>
                                    </div>

                                </div>

                            </li>

                            <li>
                                <div class="timeline-icon bg-primary">
                                    <i class="feather icon-check font-medium-2"></i>
                                </div>
                                <div class="timeline-info">
                                    <p class="font-weight-bold" style="text-align: right;">
                                        Haber Özeti :</p>
                                    <br>

                                    <p
                                        style="text-align: ;line-height: 40px;font-size: 14px;text-align: justify;padding-left: 20px;">
                                        @Model.SummaryBlo


                                    </p>

                                </div>

                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-sm-12">
            <div class="card">

                <div class="card-content">
                    <div class="card-body">
                        <ul class="activity-timeline timeline-left list-unstyled" style="margin-right: 0px !important;">
                            <li>
                                <div class="timeline-icon bg-success">
                                    <i class="feather icon-check font-medium-2"></i>
                                </div>
                                <div class="timeline-info">
                                    <p class="font-weight-bold" style="text-align: right;"> Haber fotoğrafı
                                    </p>
                                    <br>

                                    <div class="footer-btn alert alert-primary text-center ">

                                        <img src="~/fileupload/@Model.ImageMainBlo" alt="">
                                    </div>


                                </div>

                            </li>

                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <style>
        img {
            max-width: 50%;
            height: auto;
        }

        p {
            text-align: justify;
        }
    </style>

    <div class="row ">
        <div class="col-lg-12 col-12 p-0">
            <div class="card rounded-0 mb-0 px-2" style="">
                <div class="card-header pb-1 alert alert-primary">
                    <div class="card-title ">
                        <h4 class="mb-0">Haberin tam metni</h4>
                    </div>
                </div>

                <div class="display-field" class=" col-9 ">
                    @Html.Raw(Model.FullTextBlo)
                </div>

            </div>
        </div>
    </div>






    @* /////////////////////////////////////////////////////////////////////////////////////////////////////comment *@

    <div class="col-lg-12 col-12">
        <div class="d-flex justify-content-start align-items-center mb-1">
            <p class="ml-auto d-flex align-items-center">

        </div>


        @if (ViewBag.comments != null)
        {


        @foreach (var item1 in ViewBag.comments)
        {
        <div class=" mb-1 card  ">
            @if (item1.image != null)
            {

            <div class="chip chip-warning mr-1">
                <div class="chip-body">
                    <div class="avatar">
                        <img class="img-fluid" src="~/fileupload/@item1.image" alt="generic img placeholder" height="20"
                            width="20">
                    </div>
                    <span class="chip-text">@item1.username</span>
                </div>
            </div>
            }else{


            <div class="chip chip-warning mr-1">
                <div class="chip-body">
                    <div class="avatar">
                        <img class="img-fluid" src="../../icons/user.png" alt="generic img placeholder" height="20"
                            width="20">
                    </div>
                    <span class="chip-text">@item1.username</span>
                </div>
            </div>

            }


            <div class="user-page-info card-title">

                <span class="font-small-3 card-title">@item1.Comment</span>
            </div>
        </div>
        }




        }


        @if (User.Identity.IsAuthenticated)
        {
        <span class="alert alert-success mb-5" id="msg">Yorumunuzu gönderin</span>
        <br />
        }else
        {
        <span class="alert alert-success mb-5" id="msg">Yorum yazmak için giriş yapmalısınız</span>
        <br />

        }


        <div class="form-label-group mb-50">

            <textarea class="form-control" id="comment" rows="3" required placeholder="Yorum Yap"></textarea>


        </div>
        <div class="text-center">
            @if (User.Identity.IsAuthenticated)
            {
            <a style="color: white;" class="btn btn-md btn-primary text-left mb-5" onclick="sabt()">Yorum Yap </a>
            <br />


            }else
            {
            <a onclick="ref();" style="color: white;" class="btn btn-md btn-primary text-left mb-5 ">Yorum Yap </a>
            <br />
            }
        </div>
    </div>


    <input id="idblog" type="text" value="@Model.Id" style="display: none;">


    <script>



        function sabt() {

            if (document.getElementById("comment").value != "") {


                $.ajax({
                    url: "/comment/addBlog?comment=" + document.getElementById("comment").value + "&&id=" + document.getElementById("idblog").value,
                    type: "post",
                }).done(function (result) {
                    if (result == true) {

                        $("#msg").text("  Yorumunuz başarıyla gönderildi ve yönetimin onayını bekliyor");
                        document.getElementById("comment").value = "";
                    }
                });

            }
        }


    </script>
    <script>
        function ref() {

            document.location.href = "/tu/login/index";
        }
    </script>


    @* ////////////////////////////////////////////////////////////////////////////////////////////////////////////end
    Commet *@













    </div>
    </div>
    </div>

    </div>
    }
</section>
</div>
















</section>