<!-- BEGIN: Content-->
<section id="data-list-view" class="data-list-view-header">
  <!-- DataTable starts -->
  @if (ViewBag.er != null)
  {
  <p class="alert alert-success">@ViewBag.er</p>
  }
  <div class="table-responsive">
    <table class="table data-list-view">
      <thead>
        <tr>
          <th></th>
          <th>ردیف</th>
          
          <th>شماره فاکتور </th>
         
          <th> تاریخ ثبت فاکتور </th>
          <th> مبلغ کل </th>
          <th> پرداختی </th>

          <th> عملیات</th>
        </tr>
      </thead>
      <tbody>
        @if ( ViewBag.listp != null)
        {

        int i=1;
        @foreach (var item in ViewBag.listp)
        {

        <tr>
          <td></td>
          <td class="product-category"> @i</td>
          <td class="product-name">@item.Id</td>
          <td class="product-category">@item.datesave</td>

          <td class="product-category">@item.Total </td>
          <td class="product-category">@item.Pay</td>

          
          <td class="product-action">
            <div class="mb-1">
              <div class="btn-group" role="group" aria-label="Basic example">
                
                <a href="/cart/show/@item.Id"
                  class="btn btn-primary  ">نمایش جزییات فاکتور</a>
              
              </div>
            </div>
          </td>
        </tr>
i++;
        }

        }








      </tbody>
    </table>
  </div>
  <!-- DataTable ends -->

  <!-- add new sidebar starts -->

  <!-- add new sidebar ends -->
</section>
<!-- Data list view end -->

</div>
